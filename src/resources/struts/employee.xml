<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="employee" namespace="/employee" extends="struts-default,json-default">
		 <action name="login" class="employeeAction" method="login">
		 	<result name="success">/page/index/index.jsp</result>
    	</action>
		<action name="index" class="employeeAction" method="index">
			<result name="index">/page/employee/index.jsp</result>
		</action>
        <action name="list" class="employeeAction" method="list">
        	<result type="json" name="json"></result>
    	</action>
    	 <action name="addEmployee" class="employeeAction" method="addEmployee">
    	</action>
	</package>
</struts>